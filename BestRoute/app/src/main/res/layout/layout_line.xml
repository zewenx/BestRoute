        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/num"
        android:layout_centerVertical="true"
        android:text="city"
        android:gravity="center_vertical"
        android:id="@+id/address"
        />

</RelativeLayout>
